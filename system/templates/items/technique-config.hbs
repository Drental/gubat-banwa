<form class="{{cssClass}} flexcol" autocomplete="off">

  {{! Sheet Header }}
  <header class="sheet-header flexrow">
    <img class="profile" src="{{document.img}}" title="{{document.name}}" data-edit="img" />
    <h1 class="title flex3">
      <input name="name" type="text" value="{{document.name}}" placeholder="{{localize 'GUBATBANWA.Technique'}}" />
    </h1>
  </header>

  {{! Description Tab }}
  <section class="sheet-body">
    {{! generic stats and info}}
    <fieldset class="flexcol details flex3">
      <legend>{{localize "GUBATBANWA.Details"}}</legend>
      {{! Discipline }}
      <div class="form-group detail flexcol" data-name="system.discipline">
        <label>{{localize "GUBATBANWA.Discipline"}}</label>
        <select name="system.discipline" class="center">
          {{selectOptions DISCIPLINE_TYPES selected=document.system.discipline}}
        </select>
      </div>
    </fieldset>

    {{! Description }}
    <div class="form-group stacked" data-name="system.description">
      <label>{{localize "Description"}}</label>
      {{editor
        descriptionHTML
        target="system.description"
        button=true
        editable=editable
        engine="prosemirror"
        collaborate=false
      }}
    </div>
  </section>
</form>